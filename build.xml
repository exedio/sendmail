<?xml version="1.0"?>

<project name="sendmail" default="build" basedir=".">

	<property name="build.file.tag" value="unlabeled" />
	
	<taskdef
			resource="net/sf/antcontrib/antcontrib.properties"
			classpath="lib/ant-contrib.jar" />
	
	<target name="properties">
		<property name="api.private" value="off" />
		<property name="api.link.jdk" value="http://java.sun.com/j2se/1.5.0/docs/api" />
		<property name="api.link.j2ee" value="http://java.sun.com/j2ee/1.4/docs/api" />
	</target>

	<target name="compile">
		<mkdir dir="build/classes" />
		<javac srcdir="src"
				destdir="build/classes"
				includeAntRuntime="false"
				deprecation="on"
				debug="on"
				optimize="off">
			<classpath>
				<pathelement location="lib/mail.jar" />
				<pathelement location="lib/activation.jar" />
			</classpath>
			<compilerarg value="-Xlint" />
			<compilerarg value="-encoding" />
			<compilerarg value="ascii" />
		</javac>
	</target>
	
	<target name="jar" depends="compile">
		<jar jarfile="build/exedio-sendmail.jar" basedir="build/classes" duplicate="fail">
			<manifest>
				<attribute name="Specification-Title" value="exedio sendmail"/>
				<attribute name="Specification-Version" value="${build.tag}"/>
				<attribute name="Specification-Vendor" value="exedio GmbH"/>
				<attribute name="Implementation-Title" value="exedio sendmail"/>
				<attribute name="Implementation-Version" value="${build.tag}"/>
				<attribute name="Implementation-Vendor" value="exedio GmbH"/>
				<attribute name="Class-Path" value="mail.jar activation.jar" />
			</manifest>
		</jar>
	</target>
	
	<target name="jar.src">
		<mkdir dir="build" />
		<zip destfile="build/exedio-sendmail.jar-src.zip">
			<zipfileset dir="${basedir}/src">
				<include name="**/*.java" />
			</zipfileset>
		</zip>
	</target>
	
	<target name="test.compile" depends="compile">
		<mkdir dir="build/testclasses" />
		<javac srcdir="testsrc"
				destdir="build/testclasses"
				deprecation="on"
				debug="on"
				optimize="off">
			<classpath>
				<pathelement location="build/classes" />
				<pathelement location="lib/junit.jar" />
				<pathelement location="lib/mail.jar" />
				<pathelement location="lib/activation.jar" />
			</classpath>
			<compilerarg value="-Xlint" />
			<compilerarg value="-encoding" />
			<compilerarg value="ascii" />
		</javac>
		<copy todir="build/testclasses/com/exedio/sendmail">
			<fileset dir="testresources" />
		</copy>
	</target>
	
	<target name="test" depends="test.compile">
		<mkdir dir="build/testresults" />
		<junit fork="yes"
				 haltonerror="true" haltonfailure="true"
				 showoutput="true" printsummary="true">
			<formatter type="brief" usefile="false" />
			<formatter type="xml" />
			<classpath>
				<pathelement location="build/classes" />
				<pathelement location="build/testclasses" />
				<pathelement location="lib/mail.jar" />
				<pathelement location="lib/activation.jar" />
				<pathelement location="lib/junit.jar" />
			</classpath>
			<test name="com.exedio.sendmail.PackageTest" todir="build/testresults" outfile="sendmail" />
			<assertions><enable/></assertions>
		</junit>
	</target>
	
	<path id="emma.lib" >
		<pathelement location="lib/emma.jar" />
		<pathelement location="lib/emma_ant.jar" />
	</path>
	
	<taskdef resource="emma_ant.properties" classpathref="emma.lib" />
	
	<target name="emma" depends="test.compile">
		<emmajava classname="junit.textui.TestRunner"
					 libclasspathref="emma.lib"
					 sourcepath="src:testsrc"
					 fork="true"
					 failonerror="true"
					 fullmetadata="true">
			<classpath>
				<pathelement location="build/classes" />
				<pathelement location="build/testclasses" />
				<pathelement location="lib/mail.jar" />
				<pathelement location="lib/activation.jar" />
				<pathelement location="lib/junit.jar" />
			</classpath>
			<arg value="com.exedio.sendmail.PackageTest" />
			<filter includes="com.exedio.*" excludes="com.exedio.sendmail.*Test*" />
			<html outfile="build/emma/index.html" />
		</emmajava>
	</target>
	
	<target name="dist.tar">
		<mkdir dir="build" />
		<echo file="build/build.number" message="${build.tag}" />
		<tar destfile="build/exedio-sendmail-src-${build.file.tag}.tar.gz"
				compression="gzip">
			<tarfileset file="${basedir}/build/build.number" />
			<tarfileset dir="${basedir}">
				<exclude name="log.xml" /><!-- created by cruise -->
				<exclude name=".eclipse-output/**" />
				<exclude name="build/**" />
				<exclude name="api/**" />
				<exclude name="cruise/**" />
				<exclude name="test.properties" />
			</tarfileset>
		</tar>
	</target>
	
	<target name="dist.test" depends="dist.tar">
		<delete dir="build/dist-test" />
		<mkdir dir="build/dist-test" />
		<untar src="build/exedio-sendmail-src-${build.file.tag}.tar.gz"
				dest="build/dist-test"
				compression="gzip" />
		<if>
			<available file="test.properties" />
			<then>
				<!-- don't use failonerror="false", because this hides much more errors -->
				<copy file="test.properties" todir="build/dist-test" />
			</then>
		</if>
		<ant dir="build/dist-test" target="build" />
	</target>
	
	<target name="dist" depends="dist.tar, dist.test" />
	
	<target name="clean">
		<delete dir="build" />
	</target>
	
	<target name="api" depends="properties">

		<delete dir="api" />
		<mkdir  dir="api" />

		<javadoc
				sourcepath="src"
				destdir="api"
				maxmemory="60m"
				private="${api.private}"
				author="on"
				use="on"
				version="on"
				windowtitle="exedio sendmail"
				splitindex="on"
				failonerror="true"
			>
			<doctitle><![CDATA[exedio sendmail<br>API Specification]]></doctitle>
			<header>exedio sendmail</header>
			<footer>exedio sendmail</footer>
			<bottom><![CDATA[<small>Copyright &copy; 2004-2008 <a href="http://www.exedio.com/" target="_top">exedio</a> Gesellschaft f&uuml;r Softwareentwicklung mbH. All rights reserved.</small><br><font size="-3">${build.tag}</font>]]></bottom>
			<package name="com.*" />
			<link href="${api.link.jdk}"  packagelistLoc="package-list/jdk"  offline="true" />
			<link href="${api.link.j2ee}" packagelistLoc="package-list/j2ee" offline="true" />
			<classpath>
				<pathelement location="lib/mail.jar" />
				<pathelement location="lib/activation.jar" />
			</classpath>
		</javadoc>
	</target>

	<target name="build" depends="compile, jar, test, emma, api" />
	<target name="all" depends="build, jar.src, dist" />

	<target name="cruise" depends="clean, all">
		<copy todir="${basedir}/cruise">
			<fileset file="${basedir}/build/exedio-sendmail.jar" />
			<fileset file="${basedir}/build/exedio-sendmail.jar-src.zip" />
			<fileset file="${basedir}/build/exedio-sendmail-src-${build.file.tag}.tar.gz" />
			<fileset dir="${basedir}/build">
				<include name="emma/**" />
			</fileset>
			<fileset file="getlib.properties" />
		</copy>
		<copy file="CHANGELOG" tofile="${basedir}/cruise/exedio-sendmail.jar-CHANGELOG" />
	</target>
	
</project>
