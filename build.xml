<?xml version="1.0"?>

<project name="sendmail" default="build" basedir=".">

	<target name="properties">
		<property name="api.private" value="off" />
		<property name="api.link.jdk" value="http://java.sun.com/j2se/1.4.2/docs/api" />
		<property name="api.link.j2ee" value="http://java.sun.com/j2ee/1.4/docs/api" />
	</target>

	<target name="compile">
		<mkdir dir="build/classes" />
		<javac srcdir="src"
				destdir="build/classes"
				deprecation="on"
				debug="on"
				optimize="off">
			<classpath>
				<pathelement location="lib/mail.jar" />
				<pathelement location="lib/activation.jar" />
			</classpath>
		</javac>
	</target>
	
	<target name="jar" depends="compile">
		<jar jarfile="build/exedio-sendmail.jar" basedir="build/classes">
			<manifest>
				<attribute name="Specification-Title" value="exedio sendmail"/>
				<attribute name="Specification-Version" value="cruisecontrol ${label} ${cvstimestamp}"/>
				<attribute name="Specification-Vendor" value="exedio GmbH"/>
				<attribute name="Implementation-Title" value="exedio sendmail"/>
				<attribute name="Implementation-Version" value="cruisecontrol ${label} ${cvstimestamp}"/> 
				<attribute name="Implementation-Vendor" value="exedio GmbH"/>
			</manifest>
		</jar>
	</target>
	
	<target name="test.compile" depends="compile">
		<mkdir dir="build/testclasses" />
		<javac srcdir="testsrc"
				destdir="build/testclasses"
				deprecation="on"
				debug="on"
				optimize="off">
			<classpath>
				<pathelement location="build/classes" />
				<pathelement location="lib/junit.jar" />
				<pathelement location="lib/mail.jar" />
				<pathelement location="lib/activation.jar" />
			</classpath>
		</javac>
	</target>
	
	<target name="test" depends="test.compile">
		<java classname="junit.textui.TestRunner" taskname="junit" fork="yes" failonerror="yes">
			<classpath>
				<pathelement location="build/classes" />
				<pathelement location="build/testclasses" />
				<pathelement location="lib/mail.jar" />
				<pathelement location="lib/activation.jar" />
				<pathelement location="lib/junit.jar" />
			</classpath>
			<arg value="com.exedio.sendmail.PackageTest" />
		</java>
	</target>
	
	
	<target name="dist.tar">
		<mkdir dir="build" />
		<tar destfile="build/exedio-sendmail-src.tar.gz"
				compression="gzip">
			<tarfileset dir="${basedir}">
				<exclude name="build/**" />
				<exclude name="api/**" />
				<exclude name="test.properties" />
			</tarfileset>
		</tar>
	</target>
	
	<target name="dist.test" depends="dist.tar">
		<delete dir="build/dist-test" />
		<mkdir dir="build/dist-test" />
		<untar src="build/exedio-sendmail-src.tar.gz"
				dest="build/dist-test"
				compression="gzip" />
		<copy file="test.properties" todir="build/dist-test" />
		<ant dir="build/dist-test" target="build" />
	</target>
	
	<target name="dist" depends="dist.tar, dist.test" />
	
	<target name="clean">
		<delete dir="build" />
	</target>
	
	<target name="api" depends="properties">

		<delete dir="api" />
		<mkdir  dir="api" />

		<javadoc
				sourcepath="src"
				destdir="api"
				maxmemory="60m"
				private="${api.private}"
				author="on"
				use="on"
				version="on"
				windowtitle="exedio sendmail utility"
				doctitle=   "exedio sendmail&lt;br&gt;API Specification"
				header=     "exedio sendmail"
				footer=     "exedio sendmail"
				splitindex="on"
				bottom='&lt;small&gt;Copyright &amp;copy; 2004-2005 &lt;a href="http://www.exedio.com/" target="_top"&gt;exedio&lt;/a&gt; Gesellschaft f&amp;uuml;r Softwareentwicklung mbH. All rights reserved.&lt;/small&gt;&lt;!--${label}-${cvstimestamp}--&gt;'
			>
			<package name="com.*" />
			<link href="${api.link.jdk}" />
			<link href="${api.link.j2ee}" />
			<classpath>
				<pathelement location="lib/mail.jar" />
				<pathelement location="lib/activation.jar" />
			</classpath>
		</javadoc>
	</target>

	<target name="api.zip" depends="api">
		<mkdir dir="build" />
		<tar destfile="build/exedio-sendmail-api.tar.gz"
			  compression="gzip">
			<tarfileset dir="${basedir}/api" />
		</tar>
	</target>
	
	<target name="build" depends="compile, jar, test, api" />
	<target name="all" depends="build, api.zip, dist" />

</project>
