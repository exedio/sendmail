<?xml version="1.0"?>

<project name="cope.sendmail" default="all" basedir=".">

	<target name="properties">
		<property file="../local.properties" />
		<property name="api.private" value="off" />
		<property name="api.link.jdk" value="http://intranet.exedio.com/jdk-1.4.1-doc/api" />
		<!--<property name="api.link.jdk" value="http://java.sun.com/j2se/1.4.2/docs/api" />-->
	</target>

	<target name="compile">
		<mkdir dir="build/classes" />
		<javac srcdir= "src"
				destdir="build/classes"
				deprecation="on"
				debug="on"
				optimize="off" />
	</target>
	
	<target name="jar" depends="compile">
		<jar jarfile="build/exedio-sendmail.jar" basedir="build/classes" />
	</target>
	
	<target name="clean">
		<delete dir="build" />
	</target>

	<target name="api" depends="properties">

		<delete dir="api" />
		<mkdir  dir="api" />

		<javadoc
				sourcepath="src"
				destdir="api"
				maxmemory="60m"
				private="${api.private}"
				author="on"
				use="on"
				version="on"
				windowtitle="Sendmail for COPE"
				doctitle=   "Sendmail for COPE&lt;br&gt;API Specification"
				header=     "Sendmail&lt;br&gt;for COPE"
				footer=     "Cope with&lt;br&gt;Object&lt;br&gt;Persistence"
				splitindex="on"
				bottom='&lt;small&gt;&amp;copy; Copyright 2004 &lt;a href="http://www.exedio.com/" target="_top"&gt;exedio&lt;/a&gt; Gesellschaft f&amp;uuml;r Softwareentwicklung mbH. All rights reserved.&lt;small&gt;'
			>
			<package name="com.*" />
			<link href="${api.link.jdk}" />
		</javadoc>
	</target>

	<target name="all" depends="compile, jar, api" />

</project>
