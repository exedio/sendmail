<?xml version="1.0"?>

<project name="sendmail" default="all" basedir=".">

	<target name="properties">
		<property file="../local.properties" />
		<property name="api.private" value="off" />
		<property name="api.link.jdk" value="http://java.sun.com/j2se/1.4.2/docs/api" />
		<property name="api.link.activation" value="http://java.sun.com/j2ee/sdk_1.3/techdocs/api" />
	</target>

	<target name="compile">
		<mkdir dir="build/classes" />
		<javac srcdir="src"
				destdir="build/classes"
				deprecation="on"
				debug="on"
				optimize="off">
			<classpath>
				<pathelement location="../lib/mail.jar" />
				<pathelement location="../lib/activation.jar" />
			</classpath>
		</javac>
	</target>
	
	<target name="jar" depends="compile">
		<jar jarfile="build/exedio-sendmail.jar" basedir="build/classes">
			<manifest>
				<attribute name="Specification-Title" value="exedio sendmail"/>
				<attribute name="Specification-Version" value="cruisecontrol ${label} ${cvstimestamp}"/>
				<attribute name="Specification-Vendor" value="exedio GmbH"/>
				<attribute name="Implementation-Title" value="exedio sendmail"/>
				<attribute name="Implementation-Version" value="cruisecontrol ${label} ${cvstimestamp}"/> 
				<attribute name="Implementation-Vendor" value="exedio GmbH"/>
			</manifest>
		</jar>
	</target>
	
	<target name="test.compile" depends="compile">
		<mkdir dir="build/testclasses" />
		<javac srcdir="testsrc"
				destdir="build/testclasses"
				deprecation="on"
				debug="on"
				optimize="off">
			<classpath>
				<pathelement location="build/classes" />
				<pathelement location="../lib/junit.jar" />
				<pathelement location="../lib/mail.jar" />
				<pathelement location="../lib/activation.jar" />
			</classpath>
		</javac>
	</target>
	
	<target name="test" depends="test.compile">
		<java classname="junit.textui.TestRunner" taskname="junit" fork="yes" failonerror="yes">
			<classpath>
				<pathelement location="build/classes" />
				<pathelement location="build/testclasses" />
				<pathelement location="../lib/mail.jar" />
				<pathelement location="../lib/activation.jar" />
				<pathelement location="../lib/junit.jar" />
			</classpath>
			<arg value="com.exedio.sendmail.PackageTest" />
		</java>
	</target>
	
	<target name="clean">
		<delete dir="build" />
	</target>

	<target name="api" depends="properties">

		<delete dir="api" />
		<mkdir  dir="api" />

		<javadoc
				sourcepath="src"
				destdir="api"
				maxmemory="60m"
				private="${api.private}"
				author="on"
				use="on"
				version="on"
				windowtitle="exedio sendmail utility"
				doctitle=   "exedio sendmail&lt;br&gt;API Specification"
				header=     "exedio sendmail"
				footer=     "exedio sendmail"
				splitindex="on"
				bottom='&lt;small&gt;&amp;copy; Copyright 2004-2005 &lt;a href="http://www.exedio.com/" target="_top"&gt;exedio&lt;/a&gt; Gesellschaft f&amp;uuml;r Softwareentwicklung mbH. All rights reserved.&lt;small&gt;'
			>
			<package name="com.*" />
			<link href="${api.link.jdk}" />
			<link href="${api.link.activation}" />
			<classpath>
				<pathelement location="../lib/mail.jar" />
				<pathelement location="../lib/activation.jar" />
			</classpath>
		</javadoc>
	</target>

	<target name="all" depends="compile, test, jar, api" />

</project>
