<?xml version="1.0"?>

<project name="cope.sendmail" default="compile" basedir=".">

	<target name="compile">
		<mkdir dir="build/classes" />
		<javac srcdir= "src"
				destdir="build/classes"
				deprecation="on"
				debug="on"
				optimize="off">
			<include name="com/**" />
		</javac>
	</target>
	
	<target name="clean">
		<delete dir="build" />
	</target>

</project>
